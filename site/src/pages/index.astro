---
import BaseHead from "../components/BaseHead.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="bg-bg text-text min-h-screen flex items-center justify-center p-8"
  >
    <main class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl w-full">
      <div class="flex items-center justify-center">
        <img
          src="/assets/main-picture.png"
          alt="still working on a picture..."
          class="rounded-lg max-w-full h-auto"
        />
      </div>

      <div class="flex flex-col justify-center space-y-4 max-w-xs">
        <h1 class="text-4xl font-bold">Kennan Hunter</h1>
        <p class="text-lg text-text/80">Backend rust developer</p>
        <a href="/blog" class="block text-lg hover:underline">Blog</a>
        <a
          href="mailto:kennanhunter5@gmail.com"
          class="block text-lg hover:underline">Contact</a
        >
      </div>

      <div class="md:col-span-2 flex justify-center gap-6 mt-8">
        <a
          href="https://www.youtube.com/@kennanhunter"
          aria-label="YouTube"
          class="hover:opacity-80"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
            ></path>
          </svg>
        </a>
        <a
          href="https://github.com/KennanHunter"
          aria-label="GitHub"
          class="hover:opacity-80"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
        </a>
        <a href="/rss.xml" aria-label="RSS Feed" class="hover:opacity-80">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"
            ></path>
          </svg>
        </a>
      </div>
    </main>
  </body>
</html>
